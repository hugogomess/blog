<h2>Lista de Categorias:</h2>
<hr>
<button type="button" class="btn btn-success mt-2" data-toggle="modal" data-target="#modal-new">Nova Categoria</button>

<div class="modal fade" id="modal-new" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel-new">Nova Categoria</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/admin/categorias/nova" method="post" id="form-new">
                    <div class="form-group">
                        <label for="name-new" class="col-form-label">Nome:*</label>
                        <input type="text" class="form-control" id="name-new" required name="name">
                    </div>
                    <div class="form-group">
                        <label for="slug-new" class="col-form-label">Slug:*</label>
                        <input type="text" class="form-control" id="slug-new" required name="slug">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-success" form="form-new">Salvar</button>
            </div>
        </div>
    </div>
</div>


{{#each categories}}
<div class="card mt-3">
    <div class="card-body">
        <h4>{{name}}</h4>
        <small>Slug: {{slug}}</small>
        <br />
        <small>Criado em {{date}}</small>
        <br />
        <button type="button" class="btn btn-primary mt-2" data-toggle="modal"
            data-target="#modal-{{_id}}">Editar</button>
        <button type="button" class="btn btn-danger mt-2" data-toggle="modal"
            data-target="#exampleModal-{{_id}}-delete">Excluir</button>

        <div class="modal fade" id="modal-{{_id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel-{{_id}}">Editar {{name}}</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form action="/admin/categorias/editar" method="post" id="form-{{_id}}">
                            <div class="form-group">
                                <label for="name-{{_id}}" class="col-form-label">Nome:</label>
                                <input type="hidden" name="id" value="{{_id}}" />
                                <input type="text" class="form-control" id="name-{{_id}}" name="name" required value="{{name}}">
                            </div>
                            <div class="form-group">
                                <label for="slug-{{_id}}" class="col-form-label">Slug:</label>
                                <input type="text" class="form-control" id="slug-{{_id}}" name="slug" required value="{{slug}}">
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary" form="form-{{_id}}">Salvar</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="exampleModal-{{_id}}-delete" tabindex="-1" role="dialog"
            aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel-{{_id}}-delete">Excluir {{name}}</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Tem certeza que deseja excluir a categoria {{name}}?
                        <form action="/admin/categorias/excluir" method="post" id="form-{{_id}}-delete">
                            <input type="hidden" name="id" value="{{_id}}" />
                            <input type="hidden" name="name" value="{{name}}" />
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-danger" form="form-{{_id}}-delete">Excluir</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{else}}
<h4 class="mt-2">NÃ£o encontramos nenhuma categoria :(</h4>
{{/each}}