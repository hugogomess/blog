<h1>{{category.name}}</h1>
<hr>
{{#each posts}}
<div class="card mt-3">
    <div class="card-body">
        <h3>{{title}}</h3>
        <p>{{description}}</p>
        <a href="/postagens/{{slug}}"><button class="btn btn-primary">Leia mais</button></a>
        <hr>
        <small>{{date}}</small>
    </div>
</div>
{{else}}
    <h4>Nenhuma postagem nessa categoria :(</h4>
{{/each}}